<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Flow dels botons -->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:flow_maxElementsWrap="3"
        app:constraint_referenced_ids="button,button2,button3,button4,button5,button6,button7,button8,button9,button10,button11,button12,button13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:flow_wrapMode="chain"
        app:flow_horizontalStyle="spread"/>

    <!-- Botons -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 2"
        android:textStyle="bold"
        app:strokeWidth="3dp"
        app:strokeColor="@color/black"
        android:textColor="@color/maroon"
        android:textAllCaps="false"
        android:backgroundTint="@color/orange" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 3"
        android:textStyle="bold"
        android:backgroundTint="@color/purple"
        app:shapeAppearanceOverlay="@style/Button3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 4"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        app:shapeAppearanceOverlay="@style/Button4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 5"
        android:textStyle="bold"
        android:backgroundTint="@color/navy"
        app:shapeAppearanceOverlay="@style/Button5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 6"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        app:shapeAppearanceOverlay="@style/Button6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 7"
        android:textStyle="bold"
        android:backgroundTint="@color/blue"
        app:shapeAppearanceOverlay="@style/Button7" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="@color/olive"
        android:text="Botó 8"
        android:textStyle="bold"
        app:shapeAppearanceOverlay="@style/Button8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 9"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        app:shapeAppearanceOverlay="@style/Button9" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 10"
        android:textStyle="bold"
        android:backgroundTint="@color/maroon"
        app:shapeAppearanceOverlay="@style/Button10" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botó 11"
        android:textStyle="bold"
        android:backgroundTint="@color/gray"
        app:shapeAppearanceOverlay="@style/Button11" />

    <Button
        android:id="@+id/button12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Botó 12"
        android:textSize="16sp"
        android:textColor="@color/green"
        android:backgroundTint="@color/lime"
        android:textStyle="bold"
        app:shapeAppearanceOverlay="@style/Button12"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom 1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:background="@drawable/btn_custom"
        />

</androidx.constraintlayout.widget.ConstraintLayout>